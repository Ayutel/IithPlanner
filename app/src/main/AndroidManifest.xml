<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ayushi.iithplanner">
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScroll"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPage"
            android:label="@string/title_activity_add_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewAll"
            android:label="@string/title_activity_view_all"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNew"
            android:label="@string/title_activity_add_new"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddExisting"
            android:label="@string/title_activity_add_existing"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
